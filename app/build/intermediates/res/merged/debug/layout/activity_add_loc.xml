<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_add_loc"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.madalina.proiect.AddLoc">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true">
        <GridLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            tools:columnCount="2">

        <TextView tools:layout_width="100dp"
            android:text="@string/tvUpload"
            android:textAppearance="@android:style/TextAppearance.Medium"
            android:id="@+id/tvUpload"
            android:layout_column="0"
            android:layout_row="0"
            android:textSize="23sp" />

            <ImageButton
              android:layout_width="150dp"
              android:layout_height="150dp"
              android:layout_column="1"
              android:layout_row="0"
              android:id="@+id/imgUpload"
              app:srcCompat="@drawable/uploading" />

            <TextView tools:layout_width="100dp"
                android:text="@string/tvLocName"
                android:id="@+id/tvLocName"
                android:layout_column="0"
                android:layout_row="1"
                android:textAppearance="@android:style/TextAppearance.Medium"

                android:textSize="23sp"
                android:layout_width="128dp" />

            <EditText
                android:layout_width="188dp"
                android:layout_height="wrap_content"
                android:id="@+id/ptLocName"
                android:layout_column="1"
                android:layout_row="1"/>

            <TextView tools:layout_width="100dp"
            android:text="@string/tvAddress"
            android:id="@+id/tvAddress"
            android:layout_column="0"
            android:layout_row="2"
            android:textAppearance="@android:style/TextAppearance.Medium"
                android:textSize="17sp" />

            <TextView tools:layout_width="100dp"
                android:text="@string/tvAddStreet"
                android:id="@+id/tvAddStreet"
                android:layout_column="0"
                android:layout_row="4"

                />

            <TextView tools:layout_width="100dp"
                android:text="@string/tvAddNumber"
                android:id="@+id/tvAddNumber"
                android:layout_column="0"
                android:layout_row="5"
                />
            <Spinner android:layout_height="wrap_content"
                android:layout_width="wrap_content"
                android:id="@+id/district"
                android:layout_column="1"
                android:layout_row="3"
                android:entries="@array/vectdistrict">


            </Spinner>

            <EditText
                android:layout_width="192dp"
                android:layout_height="wrap_content"
                android:id="@+id/ptAddStreet"
                android:layout_column="1"
                android:layout_row="4"/>

            <EditText
                android:layout_width="186dp"
                android:layout_height="wrap_content"
                android:id="@+id/ptAddNumber"
                android:layout_column="1"
                android:layout_row="5"/>

            <TextView tools:layout_width="100dp"
            android:text="@string/tvSite"
            android:id="@+id/tvSite"
            android:layout_column="0"
            android:layout_row="6"
            android:textAppearance="@android:style/TextAppearance.Medium"

                android:textSize="23sp" />

            <TextView tools:layout_width="100dp"
                android:text="@string/tvDescription"
                android:id="@+id/tvDescription"
                android:layout_column="0"
                android:layout_row="7"
                android:textAppearance="@android:style/TextAppearance.Medium"

                android:textSize="23sp" />

            <TextView tools:layout_width="100dp"
                android:text="@string/tvCategory"
                android:id="@+id/tvCategory"
                android:layout_column="0"
                android:layout_row="8"
                android:textAppearance="@android:style/TextAppearance.Medium"
                android:textSize="23sp" />

            <EditText
                android:layout_width="183dp"
                android:layout_height="wrap_content"
                android:id="@+id/ptSite"
                android:layout_column="1"
                android:layout_row="6"/>

            <LinearLayout
                android:layout_height="wrap_content"
                android:layout_width="wrap_content"
                android:orientation="vertical"
                android:layout_column="1"
                android:layout_row="8">

                <RadioGroup
                    android:layout_width="200dp"
                    android:layout_height="wrap_content"
                    android:id="@+id/rgCategory"
                    android:orientation="vertical">


                    <RadioButton
                        android:id="@+id/cbRestaurant"
                        android:layout_width="100dp"
                        android:layout_height="wrap_content"

                        android:text="@string/cbRestaurant" />

                    <RadioButton
                                android:id="@+id/cbTerasa"
                                android:layout_width="100dp"
                                android:layout_height="wrap_content"

                                android:text="@string/cbTerasa" />



                            <RadioButton
                                android:id="@+id/cbClub"
                                android:layout_width="100dp"
                                android:layout_height="wrap_content"
                                android:layout_marginRight="40dp"
                                android:text="@string/cbClub" />

                            <RadioButton
                                android:id="@+id/cbPub"
                                android:layout_width="100dp"
                                android:layout_height="wrap_content"

                                android:text="@string/cbPub" />

                </RadioGroup>

                <!--<LinearLayout-->
                <!--android:layout_width="wrap_content"-->
                <!--android:layout_height="wrap_content"-->
                <!--android:orientation="horizontal">-->

                <!--<CheckBox-->
                    <!--android:layout_width="wrap_content"-->
                    <!--android:layout_height="wrap_content"-->
                    <!--android:id="@+id/cbRestaurant"-->
                    <!--android:text="@string/cbRestaurant"/>-->

                <!--<CheckBox-->
                    <!--android:layout_width="wrap_content"-->
                    <!--android:layout_height="wrap_content"-->
                    <!--android:id="@+id/cbTesara"-->
                    <!--android:text="@string/cbTerasa"/>-->

            <!--</LinearLayout>-->

                <!--<LinearLayout-->
                    <!--android:layout_width="wrap_content"-->
                    <!--android:layout_height="wrap_content"-->
                    <!--android:orientation="horizontal">-->

                    <!--<CheckBox-->
                        <!--android:layout_width="wrap_content"-->
                        <!--android:layout_height="wrap_content"-->
                        <!--android:id="@+id/cbClub"-->
                        <!--android:text="@string/cbClub"-->
                        <!--android:layout_marginRight="40dp"/>-->

                    <!--<CheckBox-->
                        <!--android:layout_width="wrap_content"-->
                        <!--android:layout_height="wrap_content"-->
                        <!--android:id="@+id/cbPub"-->
                        <!--android:text="@string/cbPub"/>-->

                <!--</LinearLayout>-->
            </LinearLayout>

            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/btnAddNewLoc"
                android:text="@string/btnAddNewLoc"
                android:layout_marginRight="70dp"
                android:layout_column="0"
                android:layout_row="9"
                style="@style/Widget.AppCompat.Button.Colored" />

            <TextView tools:layout_width="100dp"
                android:text="@string/tvAddDistrict"
                android:id="@+id/tvAddDistrict"
                android:layout_column="0"
                android:layout_row="3"

                />

            <EditText
                android:layout_width="185dp"
                android:layout_height="wrap_content"
                android:id="@+id/ptDescription"
                android:layout_column="1"
                android:layout_row="7"
                android:minLines="3"
                android:scrollbars="vertical"/>


        </GridLayout>



    </ScrollView>


</RelativeLayout>
